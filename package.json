{
  "name": "speed-dial-quantum",
  "description": "Minimal speed-dial extension with support for keyboard shortcuts & importing Speed Dial pages",
  "private": true,
  "repository": "https://github.com/Ahimta/speed-dial-quantum",
  "author": "Abdullah Alansari",
  "license": "GPL-3.0-only",
  "scripts": {
    "build": "rollup --config",
    "lint": "npm run prettier && npm run standard && web-ext lint",
    "nsp": "nsp check",
    "package": "web-ext build",
    "precommit": "lint-staged",
    "prettier": "prettier --write jsconfig.json packages.json README.md rollup.config.js web-ext-config.js src/*.js",
    "start": "web-ext run",
    "standard": "standard --fix rollup.config.js web-ext-config.js src/*.js",
    "test": "npm run lint",
    "watch": "rollup --config --watch"
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "lint-staged": "^7.0.4",
    "nsp": "^3.2.1",
    "prettier": "^1.11.1",
    "rollup": "^0.61.2",
    "standard": "^11.0.0",
    "web-ext": "^2.4.0"
  },
  "lint-staged": {
    "{jsconfig.json,manifest.json,README.md}": [
      "prettier --write",
      "git add"
    ],
    "{rollup.config.js,web-ext-config.js,src/*.js}": [
      "prettier --write",
      "standard --fix",
      "git add"
    ]
  },
  "standard": {
    "globals": [
      "$",
      "browser",
      "chrome"
    ]
  }
}
